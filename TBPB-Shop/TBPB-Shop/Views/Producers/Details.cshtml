@model TBPB_Shop.ViewModel.ProducerDetailsViewModel

@{
    ViewData["Title"] = "Details";
}


<h1>@Model.ProducerName Producer</h1>

@if (!Model.Products.Any())
{
    <h4 style="color: #ef2809">No products associated with this producer</h4>
    <div style="margin: 15px 0px;">
        <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Go to products</a>
    </div>
}
else
{
    <div style="margin: 20px 0px;">
        <table class="table table-striped table-bordered w-75">
            <thead>
                <tr>
                    <th>Product</th>
                    <th style="width: 15px !important;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <a asp-action="DeleteProduct" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div>
    <a asp-action="Index">Back to producers</a>
</div>
