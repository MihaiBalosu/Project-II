@model TBPB_Shop.ViewModel.CartViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>
    <strong>My Cart: </strong>
</h2>

<p>Products: @Model.NoOfProducts</p>
<p>Total price: @Model.TotalPrice</p>


<table class="table table-hover table-striped" style="width: 300px;">
    <thead>
        <tr>
            <th>Product</th>
            <th style="width: 100px;">Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>


<p>
    <a asp-controller="Cart" asp-action="Clear" asp-route-id="@Model.CartId"> Clear cart </a>
</p>