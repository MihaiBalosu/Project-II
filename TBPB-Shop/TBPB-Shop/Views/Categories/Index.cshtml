@model TBPB_Shop.ViewModel.CategoryViewModel

    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">

        <link href="~/ShopView/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/css/site.css" rel="stylesheet">
        <link href="~/ShopView/" rel="stylesheet">

    </head>

    <body>

        <div class="container">

            <div id="create_category">
                <a asp-action="Create">Create New</a>
            </div>
            <div class="row">

                @foreach (var item in Model.Categories)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            
                            <div class="card-body" id="@item.Id">
                                <h4 data-toggle="tooltip" title="Click to view description" class="category_name card-title title" onclick=showDescription("@item.Description") >
                                    @Html.DisplayFor(modelItem => item.Name)
                                </h4>
                                <h5>@Html.HiddenFor(model => item.Description, new { id = "Description" })</h5>
                            </div>
                            <div class="card-footer">
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                @Html.ActionLink("Products", "Details", new { id = item.Id })
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        Description:
                    </div>
                    <div id="modal-content" class="modal-content">                        
                    </div>
                </div>
            </div>
        </div>

        <script src="~/ShopView/vendor/jquery/jquery.min.js"></script>
        <script src="~/ShopView/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js"></script>
    </body>


