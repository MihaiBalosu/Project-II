@model TBPB_Shop.ViewModel.ProductsCreateUpdateViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4 m-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group input-width-100">
                <label asp-for="Name" class="control-label" ></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group input-width-100">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group input-width-100">
                <label asp-for="QuantityOnStoc" class="control-label"></label>
                <input asp-for="QuantityOnStoc" class="form-control" />
                <span asp-validation-for="QuantityOnStoc" class="text-danger"></span>
            </div>
            <div class="form-group input-width-100">
                <label asp-for="Producers" class="control-label"></label>
                @Html.DropDownListFor(producer => producer.ProducerId, new SelectList(Model.Producers, "Id", "Name"), "Select producer", new { @class = "form-control" })
            </div>
            <div class="form-group input-width-100">
                <label asp-for="Categories" class="control-label"></label>
                @Html.DropDownListFor(category => category.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select category", new { @class = "form-control" })
            </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

